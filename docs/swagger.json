                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/user.loginRes"
                        }
                    }
                }
            }
        },
        "/user/teacher": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "创建教师账号 需管理员登录",
                "parameters": [
                    {
                        "description": "账号密码必选，邮箱可选",
