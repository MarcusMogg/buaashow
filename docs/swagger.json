{
    "swagger": "2.0",
    "info": {
        "description": "buaashow is a sample RESTful api server.",
        "title": "buaashow",
        "contact": {
            "name": "Mogg",
            "url": "https://github.com/MarcusMogg"
        },
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/user/login": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "使用账号密码登录",
                "parameters": [
                    {
                        "description": "账号密码",
                        "name": "logindata",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/request.LoginData"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.LoginRes"
                        }
                    }
                }
            }
        },
        "/user/verify": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "使用云平台登录",
                "parameters": [
                    {
                        "description": "云平台返回的ticket",
                        "name": "ticket",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/request.LoginTicketData"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.LoginRes"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "request.LoginData": {
            "type": "object",
            "required": [
                "account",
                "password"
            ],
            "properties": {
                "account": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "request.LoginTicketData": {
            "type": "object",
            "required": [
                "authorization",
                "url"
            ],
            "properties": {
                "authorization": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            }
        },
        "response.LoginRes": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "role": {
                    "type": "integer"
                },
                "token": {
                    "type": "string"
                }
            }
        }
    }
}